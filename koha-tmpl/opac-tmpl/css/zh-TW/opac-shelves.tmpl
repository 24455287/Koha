							<!-- TMPL_VAR NAME="shelfname" -->
						</a>
					</td>
					<td<!-- TMPL_IF NAME="color" --> class="hilighted"<!-- /TMPL_IF -->>
						<!-- TMPL_IF NAME="category1" -->
							私家書架
						<!-- /TMPL_IF -->
						<!-- TMPL_IF NAME="category2" -->
							公開的私人書架
						<!-- /TMPL_IF -->
						<!-- TMPL_IF NAME="category3" -->
							公家書架
						<!-- /TMPL_IF -->
					</td>
					<td<!-- TMPL_IF NAME="color" --> class="hilighted"<!-- /TMPL_IF -->>
						<!-- TMPL_VAR NAME="shelfbookcount" --> 項圖書資料
					</td>
					<!-- TMPL_IF name="mine" -->
						<td<!-- TMPL_IF NAME="color" --> class="hilighted"<!-- /TMPL_IF -->>
							<a href="opac-shelves.pl?op=modif&shelf=<!-- TMPL_VAR NAME="shelf" -->" class="button">修改</a> <!-- TMPL_VAR name="surname" --><!-- TMPL_VAR name="firstname" -->
						</td>
					<!-- /TMPL_IF -->
				</tr>
				<!-- /TMPL_LOOP -->
			</table>
		</div>
		<div class="bloc20">
			<a href="opac-shelves.pl?shelves=1" class="button">新增或移除虛擬書架</a>
		</div>
	<!-- /TMPL_IF -->
<!-- /TMPL_IF -->

