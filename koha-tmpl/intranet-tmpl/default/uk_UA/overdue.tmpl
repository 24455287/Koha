			<td><!-- TMPL_VAR NAME="name" --></td>
			<!-- /TMPL_IF -->
			<td><!-- TMPL_VAR NAME="phone" --></td>
			<td><p><b><!-- TMPL_VAR NAME="title" --></b>, <!-- TMPL_VAR NAME="author" --></p></td>
