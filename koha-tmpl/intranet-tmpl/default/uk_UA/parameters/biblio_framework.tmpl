	if (_alertString.length==0) {
		document.Aform.submit();
	} else {
		alertString2  = _("Форма не прийнята через наступну(і) проблему(и)");
		alertString2 += "\n------------------------------------------------------------------------------------\n";
		alertString2 += _alertString;
		alert(alertString2);
	}
}
